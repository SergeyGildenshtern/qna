$('.question-errors').html('<%= render 'shared/errors', resource: question %>');

<% if question.errors.blank? %>
  $('form#edit-question').addClass('hidden');
  $('.edit-question-link').show();

  $('.title').html('<%= j question.title %>');
  $('.question').html('<%= j question.body %>');
  $('.question-files').html('<%= render 'shared/files', resource: question %>');
  $('.question-links').html('<%= render 'shared/links', resource: question %>');
<% end %>
